{
    "name": "node-express-pg-starter",
    "version": "1.0.0",
    "description": "Node.js + Express.js + PostgreSQL boilerplate with Docker, GitHub Actions, and comprehensive tooling",
    "main": "dist/src/bin/www.js",
    "engines": {
        "node": ">=20.0.0"
    },
    "scripts": {
        "preinstall": "npx check-node-version --node '>=20.0.0'",
        "clean": "rm -rf node_modules package-lock.json && npm cache clean --force",
        "setup": "npm run clean && npm install",
        "dev": "nodemon --exec \"swc-node src/bin/www.js\" --watch src --ext js,json",
        "dev:swc": "swc-node src/bin/www.js",
        "dev:inspect": "nodemon --exec \"node --inspect=0.0.0.0:9229 -r @swc-node/register src/bin/www.js\" --watch src --ext js,json",
        "build": "swc src -d dist",
        "start": "node dist/src/bin/www.js",
        "test": "NODE_ENV=test mocha --require @swc-node/register 'test/**/*.test.js'",
        "test:watch": "npm run test -- --watch",
        "test:auth": "NODE_ENV=test mocha --require @swc-node/register test/auth.test.js",
        "test:user": "NODE_ENV=test mocha --require @swc-node/register test/user.test.js",
        "test:health": "NODE_ENV=test mocha --require @swc-node/register test/health.test.js",
        "test:authorization": "NODE_ENV=test mocha --require @swc-node/register test/authorization.test.js",
        "test:comprehensive": "NODE_ENV=test mocha --require @swc-node/register test/comprehensive.test.js",
        "test:all": "npm run test:auth && npm run test:user && npm run test:health && npm run test:authorization",
        "test:setup": "NODE_ENV=test npm run db:create && NODE_ENV=test npm run db:migrate",
        "test:teardown": "NODE_ENV=test npx sequelize-cli db:drop",
        "test:reset": "npm run test:teardown && npm run test:setup",
        "lint": "eslint src/**/*.js",
        "lint:fix": "eslint src/**/*.js --fix",
        "db:create": "npx sequelize-cli db:create",
        "db:migrate": "npx sequelize-cli db:migrate",
        "db:migrate:undo": "npx sequelize-cli db:migrate:undo",
        "db:seed": "npx sequelize-cli db:seed:all",
        "db:seed:undo": "npx sequelize-cli db:seed:undo:all",
        "docker:build": "docker build -t node-express-pg-starter .",
        "docker:run": "docker-compose up -d",
        "docker:stop": "docker-compose down"
    },
    "keywords": [
        "nodejs",
        "express",
        "postgresql",
        "sequelize",
        "jwt",
        "docker",
        "boilerplate"
    ],
    "author": "",
    "license": "MIT",
    "dependencies": {
        "@types/bcrypt": "^5.0.2",
        "bcrypt": "^6.0.0",
        "compression": "^1.7.4",
        "cors": "^2.8.5",
        "dotenv": "^16.4.5",
        "express": "^4.19.2",
        "express-rate-limit": "^7.4.0",
        "express-validator": "^7.2.0",
        "helmet": "^7.1.0",
        "jsonwebtoken": "^9.0.2",
        "morgan": "^1.10.0",
        "nodemailer": "^6.9.14",
        "pg": "^8.12.0",
        "pg-hstore": "^2.3.4",
        "sequelize": "^6.37.3",
        "uuid": "^10.0.0"
    },
    "devDependencies": {
        "@eslint/js": "^9.9.1",
        "@swc-node/register": "^1.10.9",
        "@swc/cli": "^0.4.0",
        "@swc/core": "^1.7.26",
        "@types/bcryptjs": "^3.0.0",
        "chai": "^4.3.10",
        "chai-http": "^4.4.0",
        "eslint": "^9.9.1",
        "globals": "^15.9.0",
        "mocha": "^11.5.0",
        "nodemon": "^3.1.4",
        "sequelize-cli": "^6.6.2",
        "supertest": "^7.0.0",
        "swc-node": "^1.0.0"
    }
}
